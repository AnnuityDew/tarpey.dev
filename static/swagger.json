{
    "swagger":"2.0",
    "info":{
        "title":"tarpey.dev",
        "description":"API for my site.",
        "version":"2020"
    },
    "servers":[
        {"url":"http://127.0.0.1:5000"},
        {"url":"https://tarpey.dev"}
    ],
    "tags":[
        {
            "name":"users",
            "description":"User operations."
        },
        {
            "name":"quotes",
            "description":"My favorites."
        },
        {
            "name":"haveyouseenx",
            "description":"See what games I've played."
        },
        {
            "name":"mildredleague",
            "description":"Respect your elders."
        },
        {
            "name":"DDR",
            "description":"Select a style!"
        }
    ],
    "schemes":"https",
    "paths":{
        "/api/users/{username}":{
            "get":{
                "tags":["users"],
                "summary":"Get a user.",
                "parameters":[
                    {
                        "name":"username",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"string"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/index/random-quote":{
            "get":{
                "tags":["quotes"],
                "summary":"Pick a random quote out of my favorites.",
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/all-teams":{
            "get":{
                "tags":["mildredleague"],
                "summary":"Get data for all teams in Mildred League's history.",
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/all-games":{
            "get":{
                "tags":["mildredleague"],
                "summary":"Get data for all teams in Mildred League's history.",
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/{season}":{
            "get":{
                "tags":["mildredleague"],
                "summary":"Get data for all games in a single season.",
                "parameters":[
                    {
                        "name":"season",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"integer"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/boxplot/{season}/{against}/transform":{
            "get":{
                "tags":["mildredleague"],
                "summary":"Transform single season data into boxplot data.",
                "parameters":[
                    {
                        "name":"season",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"integer"
                        }
                    },
                    {
                        "name":"against",
                        "in":"path",
                        "required":true,
                        "type":"array",
                        "items":{
                            "type":"string",
                            "enum":[
                                "for",
                                "against"
                            ]
                        },
                        "collectionFormat":"multi"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/boxplot/{season}/{against}":{
            "post":{
                "tags":["mildredleague"],
                "summary":"Put transformed boxplot data into the database.",
                "consumes":[
                    "application/json"
                ],
                "parameters":[
                    {
                        "name":"season",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"integer"
                        }
                    },
                    {
                        "name":"against",
                        "in":"path",
                        "required":true,
                        "type":"array",
                        "items":{
                            "type":"string",
                            "enum":[
                                "for",
                                "against"
                            ]
                        },
                        "collectionFormat":"multi"
                    },
                    {
                       "in":"body",
                       "name":"body",
                       "description":"List of boxplot scores.",
                       "required":true,
                       "schema":{
                          "type":"array",
                          "items":{
                             "$ref":"#/definitions/boxplot_doc"
                          }
                       }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/boxplot/{season}/{against}/get":{
            "get":{
                "tags":["mildredleague"],
                "summary":"Get transformed boxplot data back from the database.",
                "parameters":[
                    {
                        "name":"season",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"integer"
                        }
                    },
                    {
                        "name":"against",
                        "in":"path",
                        "required":true,
                        "type":"array",
                        "items":{
                            "type":"string",
                            "enum":[
                                "for",
                                "against"
                            ]
                        },
                        "collectionFormat":"multi"
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/notes/{season}":{
            "post":{
                "tags":["mildredleague"],
                "summary":"Create a new note for a season.",
                "consumes":[
                    "text/plain"
                ],
                "parameters":[
                    {
                        "name":"season",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"integer"
                        }
                    },
                    {
                        "name":"note",
                        "in":"body",
                        "required":true,
                        "schema":{
                            "type":"string"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/mildredleague/notes/{season}/get":{
            "get":{
                "tags":["mildredleague"],
                "summary":"Retrieve all notes for the requested season.",
                "parameters":[
                    {
                        "name":"season",
                        "in":"path",
                        "required":true,
                        "schema":{
                            "type":"integer"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/haveyouseenx/all-games":{
            "get":{
                "tags":["haveyouseenx"],
                "summary":"Request data for all games I've played.",
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/haveyouseenx/count-by-status":{
            "get":{
                "tags":["haveyouseenx"],
                "summary":"Request total count of games I've played, by status.",
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/haveyouseenx/playtime":{
            "get":{
                "tags":["haveyouseenx"],
                "summary":"Request total playtime for games I've played.",
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        },
        "/api/haveyouseenx/search":{
            "get":{
                "tags":["haveyouseenx"],
                "summary":"Look for a game I've played.",
                "parameters":[
                    {
                        "name":"query",
                        "in":"query",
                        "required":true,
                        "schema":{
                            "type":"string"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"successful operation"
                    }
                }
            }
        }
    },
    "definitions":{
        "boxplot_doc":{
            "type":"object",
            "properties":{
                "_id":{
                    "type":"integer",
                    "format":"int64"
                },
                "name":{
                    "type":"string"
                },
                "nick_name":{
                    "type":"string"
                },
                "playoff_rank":{
                    "type":"integer",
                    "format":"int64"
                },
                "score":{
                    "type":"integer",
                    "format":"int64"
                }
            }
        }
    }
}